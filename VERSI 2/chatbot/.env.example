# ============================================
# CHATBOT RAG SYSTEM - CONFIGURATION
# With Tesseract OCR
# ============================================

# ============================================
# OCR Configuration (NEW)
# ============================================
# Path to Tesseract executable
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux: /usr/bin/tesseract
# macOS: /usr/local/bin/tesseract
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# OCR Language (use + for multiple languages)
# Options: eng, ind, eng+ind, etc.
OCR_LANG=eng+ind

# Skip OCR processing (faster but less comprehensive)
# false = Use OCR (slower, more accurate)
# true = Native text extraction only (faster)
SKIP_OCR=false

# ============================================
# OpenAI API Configuration (Standard OpenAI - Backup)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# Azure OpenAI Configuration for Embedding
# ============================================
AZURE_EMBEDDING_API_KEY=your_azure_embedding_api_key_here
AZURE_EMBEDDING_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/text-embedding-3-large/embeddings?api-version=2023-05-15
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_EMBEDDING_API_VERSION=2023-05-15

# ============================================
# Azure OpenAI Configuration for Chatbot/LLM
# ============================================
AZURE_CHATBOT_API_KEY=your_azure_chatbot_api_key_here
AZURE_CHATBOT_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/deployments/gpt-4o-mini/chat/completions?api-version=2024-02-01
AZURE_CHATBOT_DEPLOYMENT=gpt-4o-mini
AZURE_CHATBOT_API_VERSION=2024-02-01

# ============================================
# Embedding Configuration
# ============================================
USE_AZURE_OPENAI=True  # Set to True to use Azure OpenAI, False for standard OpenAI
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072  # text-embedding-3-large = 3072 dim

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=maggot_chatbot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123123

# ============================================
# Vector Store Configuration
# ============================================
VECTOR_DIMENSION=3072  # Must match embedding dimension
CHUNK_SIZE=800         # Characters per chunk (increased from 500)
CHUNK_OVERLAP=100      # Overlap between chunks (increased from 50)

# ============================================
# Flask API Configuration
# ============================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=True

# ============================================
# File Upload Settings
# ============================================
MAX_FILE_SIZE=100       # MB (increased from 50)
ALLOWED_EXTENSIONS=pdf
UPLOAD_FOLDER=./storage/uploads

# ============================================
# RAG Settings
# ============================================
TOP_K_RESULTS=5
TEMPERATURE=0.7
MAX_TOKENS=1000

# ============================================
# NOTES:
# ============================================
# 1. Install Tesseract OCR first before running
# 2. Set TESSERACT_CMD to correct path for your OS
# 3. Download language data files if using non-English
# 4. SKIP_OCR=true for faster processing (digital PDFs only)
# 5. SKIP_OCR=false for scanned PDFs or images with text
